<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movieDetailRootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:behavior_peekHeight="240dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/fragmentMovieDetailToolbar"
        style="@style/AppTheme.Toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"/>

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/movieDetailLoadingView"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/movieDetailMovieImageView"
        android:layout_width="168dp"
        android:layout_height="248dp"
        android:contentDescription="@string/movie_image_content_description"
        app:layout_constraintBottom_toTopOf="@+id/movieDetailRatingView"
        app:layout_constraintEnd_toStartOf="@+id/movieDetailMovieTitleView"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentMovieDetailToolbar"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed"
        tools:src="@drawable/movie_placeholder"/>

    <RatingBar
        android:id="@+id/movieDetailRatingView"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:isIndicator="true"
        android:max="5"
        android:numStars="5"
        android:stepSize="0.1"
        app:layout_constraintBottom_toTopOf="@+id/movieDetailHomePageView"
        app:layout_constraintEnd_toStartOf="@+id/movieDetailMovieTitleView"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/movieDetailMovieImageView"
        app:layout_constraintTop_toBottomOf="@+id/movieDetailMovieImageView"/>

    <TextView
        android:id="@+id/movieDetailMovieTitleView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/large_text"
        app:layout_constraintBottom_toTopOf="@+id/movieDetailReleaseDateView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/movieDetailMovieImageView"
        app:layout_constraintTop_toBottomOf="@+id/fragmentMovieDetailToolbar"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Avengers"/>

    <TextView
        android:id="@+id/movieDetailReleaseDateView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/movieDetailMovieImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/movieDetailMovieImageView"
        app:layout_constraintTop_toBottomOf="@+id/movieDetailMovieTitleView"
        app:layout_constraintVertical_bias="0"
        tools:text="2015-05-01"/>

    <TextView
        android:id="@+id/movieDetailReleaseStatusView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/movieDetailMovieImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/movieDetailMovieImageView"
        app:layout_constraintTop_toBottomOf="@+id/movieDetailReleaseDateView"
        app:layout_constraintVertical_bias="0"
        tools:text="Released"/>

    <TextView
        android:id="@+id/movieDetailLengthView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/movieDetailMovieImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/movieDetailMovieImageView"
        app:layout_constraintTop_toBottomOf="@+id/movieDetailReleaseStatusView"
        app:layout_constraintVertical_bias="0"
        tools:text="142 min."/>

    <TextView
        android:id="@+id/movieDetailLanguageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/movieDetailMovieImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/movieDetailMovieImageView"
        app:layout_constraintTop_toBottomOf="@+id/movieDetailLengthView"
        app:layout_constraintVertical_bias="0"
        tools:text="en"/>

    <TextView
        android:id="@+id/movieDetailHomePageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:textSize="@dimen/medium_text"
        app:layout_constraintBottom_toTopOf="@+id/movieDetailDescription"
        app:layout_constraintEnd_toEndOf="@+id/movieDetailRatingView"
        app:layout_constraintStart_toStartOf="@+id/movieDetailRatingView"
        app:layout_constraintTop_toBottomOf="@+id/movieDetailRatingView"
        tools:text="www.google.com"
        />

    <TextView
        android:id="@+id/movieDetailDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="400dp"
        android:ellipsize="end"
        android:maxLines="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/movieDetailHomePageView"
        app:layout_constraintStart_toStartOf="@+id/movieDetailHomePageView"
        app:layout_constraintTop_toBottomOf="@+id/movieDetailHomePageView"
        app:layout_constraintVertical_bias="0"
        tools:text="When Alita awakens with no memory of who she is in a future world she does not recognize, she is taken in by Ido, a compassionate doctor who realizes that somewhere in this abandoned cyborg shell is the heart and soul of a young woman with an extraordinary past."/>
</androidx.constraintlayout.widget.ConstraintLayout>