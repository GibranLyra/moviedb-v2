<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movieItemHorizontalRootView"
    android:layout_width="140dp"
    android:layout_height="248dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    android:orientation="horizontal"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/movieItemHorizontalImageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:contentDescription="@string/movie_image_content_description"
            android:src="@drawable/movie_placeholder"
            app:layout_constraintBottom_toTopOf="@+id/movieItemHorizontalTitleView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/movieItemHorizontalTitleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:maxLines="2"
            android:paddingStart="@dimen/tiny_padding"
            android:paddingEnd="@dimen/tiny_padding"
            android:paddingBottom="@dimen/tiny_padding"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/movieItemHorizontalImageView"
            app:layout_constraintStart_toStartOf="@+id/movieItemHorizontalImageView"
            app:layout_constraintTop_toBottomOf="@+id/movieItemHorizontalImageView"
            tools:text="Movie Title"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>